@using LibraryApplicationSystem.Web.Models.Students
@using LibraryApplicationSystem.Web.Controllers
@model StudentListViewModel



@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Students/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@("Students")</h1>
            </div>
            <div class="col-sm-6">
              @*  <a href="javascript:;" data-toggle="modal" data-target="#UserCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>*@
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                   
                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/Students/CreateOrEditStudent">
                            <i class="fa fa-plus-square"></i>
                            @L("CreateStudent")
                        </a>
                        <div class="col-sm-6">
                           

                            @*<a class="btn bg-blue float-sm-right" href="">
                                <i class="fa fa-plus-square"></i>
                                @L("CreateDepartment")
                            </a>*@
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <form asp-controller="Students" asp-action="Index" method="get">
                                    <div class="input-group">

                                        <input type="text" name="searchString" class="form-control txt-search" />
                                        <div class="input-group-prepend">
                                            <button type="submit" name="searchString" class="btn bg-blue btn-search">
                                                <span class="fas fa-search" aria-hidden="true"></span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-6">
                                @*@await Html.PartialAsync("~/Views/Users/Index.AdvancedSearch.cshtml")*@
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Contact Number</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student.Id</td>
                                            <td>@student.StudentName</td>
                                            <td>@student.StudentContactNumber</td>
                                            <td>@student.StudentEmail</td>
                                            <td>@student.Department?.Name</td>

                                            <td>
                                                <button type="button" class="btn btn-sm bg-secondary edit-stud" data-stud-id="@student.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-sm bg-danger delete-stud" data-stud-id="@student.Id" data-user-name="@student.StudentName">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

                                     