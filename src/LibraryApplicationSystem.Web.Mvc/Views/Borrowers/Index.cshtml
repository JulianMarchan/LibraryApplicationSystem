@using LibraryApplicationSystem.Web.Models.Borrowers
@using LibraryApplicationSystem.Web.Controllers
@model BorrowerListViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Borrowers/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@("Borrower")</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/Borrowers/CreateOrEditBorrowers">
                            <i class="fa fa-plus-square"></i>
                            @("Create Borrowers")
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">

                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date Borrowed</th>
                                        <th>Expected Return</th>
                                        <th>Date Returned</th>
                                        <th>Book name</th>
                                        <th>Student</th>

                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model.Borrowers)
                                    {
                                        <tr>
                                            <td>@b.Id</td>
                                            <td>@b.BorrowerDate</td>
                                            <td>@b.ExpectedReturnDate</td>
                                            <td>@b.ReturnDate</td>
                                            <td>@b.Book?.BookTitle</td>
                                            <td>@b.Student?.StudentName</td>

                                            <td>
                                                <button type="button" class="btn btn-sm bg-secondary edit-borr" data-borr-id="@b.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-sm bg-danger delete-borr" data-borr-id="@b.Id" data-user-name="@b.BorrowerDate">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

