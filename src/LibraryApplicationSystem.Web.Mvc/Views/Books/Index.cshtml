@using LibraryApplicationSystem.Web.Models.Books
@using LibraryApplicationSystem.Web.Controllers
@model BookListViewModel


@section scripts{
        <environment names="Development">
            
        <script src="~/view-resources/Views/Books/Index.js" asp-append-version="true"></script>

        </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@("Book")</h1>
            </div>
            <div class="col-sm-6">
           
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                   
                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/Books/CreateOrEditBook">
                            <i class="fa fa-plus-square"></i>
                            @("Create Book")
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Book Title</th>
                                        <th>Book Publisher</th>
                                        <th>is borrowed</th>
                                        <th>Book Author</th>
                                        <th>Book Category</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model.Books)
                                    {
                                        <tr>
                                            <td>@book.Id</td>
                                            <td>@book.BookTitle</td>
                                            <td>@book.BookPublisher</td>
                                            <td>@book.isBorrowed</td>
                                            <td>@book.Author?.Name</td>
                                            <td>@book.BookCategories?.Name</td>

                                            <td>
                                                <button type="button" class="btn btn-sm bg-secondary edit-books" data-books-id="@book.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-sm bg-danger delete-books" data-books-id="@book.Id" data-user-name="@book.BookTitle">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

                                     