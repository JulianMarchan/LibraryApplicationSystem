@{
}
@using LibraryApplicationSystem.Web.Models.Authors
@using LibraryApplicationSystem.Web.Startup
@model CreateOrEditAuthorViewModel

@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Authors/CreateOrEditAuthor.js" asp-append-version="true"></script>
    </environment>
}

<form name="CreateAuthorForm" id="CreateAuthorForm" role="form" class="form-horizontal">

    <div class="modal-body" >
        <label style="font-size:24px" class="col-md-3 col-form-label">Author Form</label>
        <input type="hidden" name="Id" value="@Model?.Id" data-dept-name />
        <div class="form-group row required">
            <div class="col-12">
                <div style="display:flex; justify-content:center;align-items:center;" class="row">
                    <div class="col-md-6 form-group">
                        <label class="col-md-3 col-form-label" for="Name">Name</label>

                        <input id="Name" type="text" name="Name" value="@Model?.Name" class="form-control" data-dept-name required>
                    </div>
                </div>
                
               
            </div>
           

        </div>
    </div>
    <div style="display:flex; justify-content:center;" class="col-md-12 col-form-label">
        <button style="width:70px; height:40px; margin:5px;" id="Submit" type="submit" name="Submit" class="btn bg-blue float-sm-right save-button"> Save </button>
        <button style="width:70px; height:40px; margin:5px;" id="Cancel" type="button" name="Cancel" class="btn btn-sm bg-secondary cancel-button">Cancel</button>
    </div>
</form>