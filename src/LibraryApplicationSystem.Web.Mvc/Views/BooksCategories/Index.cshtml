@using LibraryApplicationSystem.Web.Models.BookCategories
@using LibraryApplicationSystem.Web.Controllers
@model BookCategoryViewModel


@section scripts{
        <environment names="Development">
            
        <script src="~/view-resources/Views/BookCategories/Index.js" asp-append-version="true"></script>

        </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@("Book Categories")</h1>
            </div>
            <div class="col-sm-6">
           
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                   
                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/BooksCategories/CreateOrEditBookCategory">
                            <i class="fa fa-plus-square"></i>
                            @("Create BookCategory")
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <form asp-controller="BooksCategories" asp-action="Index" method="get">
                                    <div class="input-group">

                                        <input type="text" name="searchString" class="form-control txt-search" />
                                        <div class="input-group-prepend">
                                            <button type="submit" name="searchString" class="btn bg-blue btn-search">
                                                <span class="fas fa-search" aria-hidden="true"></span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Department</th>

                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bookCategory in Model.BookCategories)
                                    {
                                        <tr>
                                            <td>@bookCategory.Id</td>
                                            <td>@bookCategory.Name</td>
                                            <td>@bookCategory.Department?.Name</td>

                                            <td>
                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-secondary edit-bookcat" data-bookcat-id="@bookCategory.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>
                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-danger delete-bookcat" data-bookcat-id="@bookCategory.Id" data-user-name="@bookCategory.Name">
                                                    <i class="fas fa-trash"></i> 
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

                                     